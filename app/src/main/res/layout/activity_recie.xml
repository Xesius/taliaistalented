<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".RecieActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@mipmap/removebgpat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#70B5B5B5"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/coktor"
            android:background="#A85E00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="הזמנה שלך בוצעה בהצלחה"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reicpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coktor"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:text="קבלה מס 130 :"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/recipename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="שם"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipename"
            android:layout_centerHorizontal="true"
            android:text="סכום"
            android:textColor="#43A047"
            android:textSize="50dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="90dp"
            android:gravity="center"
            android:text="תודה שקניתים אצלנו"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="gobacktomain"
            android:text="חזור לעמוד הראשי" />
    </RelativeLayout>

</RelativeLayout>