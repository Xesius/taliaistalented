<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".CartActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@mipmap/removebgpat" />

    <TextView
        android:id="@+id/sikom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#AC6000"
        android:gravity="center"
        android:text="סיכום ביניים"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/cartview"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sikom"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:dividerHeight="10dp"
        android:divider="@null"
        tools:listitem="@layout/fooditemlistcart" />

    <TextView
        android:id="@+id/shc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sikom"
        android:layout_marginLeft="10dp"
        android:text="סהכ"
        android:textColor="@color/black"
        android:textSize="30dp"

        />

    <TextView
        android:id="@+id/sumall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shc"
        android:layout_marginLeft="10dp"
        android:text="170 ₪"
        android:textStyle="bold"
        android:background="@color/white"
        android:textColor="#43A047"
        android:textSize="20dp"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:onClick="buyall"
        android:text="הזמן" />

</RelativeLayout>